<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <queries>
        <package android:name="com.mobile.legends" />
        <package android:name="com.mobile.legends.vng" />
        <package android:name="com.mobile.legends.korea" />
        <package android:name="com.mobiin.gp" />

    </queries>

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_mlbb_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_mlbb_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.MlbbOp">
        
        <service android:name=".MlbbOverlayService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse|mediaProjection"/>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorLandscape"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="sensorLandscape"
            android:exported="false" />
    </application>

</manifest>