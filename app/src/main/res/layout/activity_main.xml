<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btn_launch_mlbb"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_mlbb_launcher"
        android:scaleType="centerCrop"
        android:background="#00000000"
        android:contentDescription="Launch Mobile Legends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_launcher_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tap to Launch MLBB &amp; Start Overlay"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_launch_mlbb"
        app:layout_constraintStart_toStartOf="@+id/btn_launch_mlbb"
        app:layout_constraintTop_toBottomOf="@+id/btn_launch_mlbb" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Settings"
        app:srcCompat="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>